<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
	<div class="container">
		<div class="navbar-header">
			<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
				<span class="sr-only">Toggle navigation</span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</button>
			<a class="navbar-brand" href="#">Cert Prep</a>
		</div>
		<div class="navbar-collapse collapse">
			<ul class="nav navbar-nav">
				<li>{{#link-to 'account'}}Home{{/link-to}}</li>
				<li>{{#link-to 'register'}}Register{{/link-to}}</li>
			</ul>
			{{#if session.isAuthenticated}}
			<button type="submit" class="btn btn-success"{{ action 'invalidateSession' }}>Logout</button>
			{{else}}
			{{! login form; the fields must be named "identification" and "password"; the controller action is "authenticate" }}
			<form {{action 'authenticate' on='submit'}} class="navbar-form navbar-right" role="form">
				<div class="form-group">
					{{input id='identification' placeholder='Email' class='form-control' value=identification}}
				</div>
				<div class="form-group">
					{{input id='password' placeholder='Enter Password' class='form-control' type='password' value=password}}
				</div>
				<button type="submit" class="btn btn-success">Sign in</button>
			</form>
			{{/if}}
		</div><!--/.navbar-collapse -->
	</div>
</div>


